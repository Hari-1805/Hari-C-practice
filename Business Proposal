#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    int p,n,r;
    float i,a,d,f;
    cin>>p>>n>>r;
    i=((p*n*r)/100);
    a=(p+i);
    d=(i*0.02);
    f=(a-d);
    cout<<fixed<<setprecision(2)<<i<<endl;
    cout<<fixed<<setprecision(2)<<a<<endl;
    cout<<fixed<<setprecision(2)<<d<<endl;
    cout<<fixed<<setprecision(2)<<f;
}
